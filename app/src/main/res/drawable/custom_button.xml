<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
    <shape  android:shape="rectangle">
        <gradient android:startColor="#137135" android:centerColor="#14763D" android:endColor="#107839" android:angle="90" />
        <corners android:radius="10dp" android:bottomLeftRadius="15dp"/>
        <stroke android:width="2dp" android:color="#9ED7A2" />   <!--#9ED7A2 -->
        <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp" />
    </shape>
    </item>

    <item android:state_pressed="true">
        <shape  android:shape="rectangle">
            <gradient android:startColor="#137135" android:centerColor="#0F7939" android:endColor="#107839" android:angle="90" />
            <corners android:radius="10dp" android:bottomLeftRadius="15dp"/>
            <stroke android:width="5dp" android:color="#98CF57" android:right="15dp" android:bottom="5dp" />
        </shape>
    </item>

</selector>